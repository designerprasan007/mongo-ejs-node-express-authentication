<!DOCTYPE html>
<html>
<head>
	<title>Register</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
</head>
<body>
	<div class="container">
		<div class="row pt-5">
			<div class="col-md-6 offset-md-3 border">
				<h3 class="text-center pt-3">Register</h3>
				<form>
					<p class="text-danger emptyErr"></p>
					<p class="text-danger emailErr"></p>
					<p class="text-danger passErr"></p>
				  <div class="form-group">
				    <label for="exampleInputEmail1">UserName</label>
				    <input type="text" name="username" class="form-control" id="Username">
				  </div>
				  <div class="form-group">
				    <label for="exampleInputEmail1">Email address</label>
				    <input type="email" name="email" class="form-control" id="UserEmail">
				  </div>
				  <div class="form-group">
				    <label>Password</label>
				    <input type="password" name="password" class="form-control" id="UserPass">
				  </div>
				  <div class="form-group">
				    <label for="ConfPass">Re-enter Password</label>
				    <input type="password" name="password" class="form-control" id="confPass">
				  </div>
			      <div class="text-center pb-3">
				    <button type="button" id="registerSubmit" class="btn btn-primary">Register</button>
				  	  <p class="pt-3">Already have Account?</p>
				  	  <a href="/auth/users/"> 
			  			<button type="button" class="btn btn-success">Login</button>
			  		  </a>
			      </div>
				</form>
			</div>
		</div>
	</div>


<!-- Jquery CDN -->
<script src="/js/jquery-cdn.js"></script>
<!-- Js for handleing login -->
<script src="/js/Authantication.js"></script>
</body>
</html>